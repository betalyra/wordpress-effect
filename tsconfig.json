{
    "extends": "@total-typescript/tsconfig/tsc/no-dom/library", // For a library
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": false,
        "outDir": "dist",
        "rootDir": "src"
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/__tests__/**",
        "node_modules",
        "coverage",
        "dist"
    ]
}
